---
import BaseLayout from "../layouts/BaseLayout.astro";

const secondaryLinks = [
  { href: "/power", label: "Power" },
  { href: "/the-melt", label: "The Melt" },
  { href: "/factions", label: "Factions" },
  { href: "/characters", label: "Characters" },
  { href: "/symbols", label: "Symbols" },
];
---

<BaseLayout title="Lost in the Melt">
  <section class="not-found">
    <div class="sigil" aria-hidden="true">
      <svg viewBox="0 0 80 80" role="presentation">
        <circle cx="40" cy="40" r="32" />
        <path d="M40 16 L52 40 L40 64 L28 40 Z" />
        <path d="M16 40 H64" />
      </svg>
    </div>
    <div class="not-found__text">
      <p class="overline">Lost in the Melt</p>
      <h1>404</h1>
      <p class="subtext">
        The path you traced has softened into vapor. Step back to the invocation, or slip back into the world and
        find a steadier thread.
      </p>
      <div class="actions">
        <a class="button button--primary" href="/">Return to Invocation</a>
        <a class="button button--ghost" href="/world">Enter the World</a>
      </div>
    </div>
  </section>

  <section class="secondary">
    <h2>Re-orient by archive</h2>
    <div class="secondary__links">
      {secondaryLinks.map((link) => (
        <a href={link.href}>{link.label}</a>
      ))}
    </div>
  </section>

  <style>
    .not-found {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 2rem;
      align-items: center;
      padding: 2.5rem;
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 24px;
      background: rgba(11, 12, 22, 0.8);
    }

    .sigil {
      width: 120px;
      height: 120px;
      display: grid;
      place-items: center;
      border-radius: 999px;
      background: radial-gradient(circle at top, rgba(118, 140, 240, 0.25), rgba(6, 7, 16, 0.9));
      border: 1px solid rgba(140, 170, 255, 0.3);
    }

    .sigil svg {
      width: 64px;
      height: 64px;
      stroke: rgba(200, 214, 255, 0.9);
      stroke-width: 2;
      fill: none;
      opacity: 0.9;
    }

    .not-found__text h1 {
      font-size: clamp(3rem, 6vw, 5rem);
      margin: 0.25rem 0 0.5rem;
      letter-spacing: 0.08em;
    }

    .overline {
      text-transform: uppercase;
      letter-spacing: 0.3em;
      font-size: 0.75rem;
      color: #9ea4c5;
      margin: 0;
    }

    .subtext {
      max-width: 520px;
      color: #c5cbdf;
      margin: 0 0 1.75rem;
    }

    .actions {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .button {
      padding: 0.75rem 1.5rem;
      border-radius: 999px;
      border: 1px solid transparent;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      font-size: 0.78rem;
    }

    .button--primary {
      background: #7f95ff;
      color: #0a0c18;
      border-color: rgba(140, 170, 255, 0.6);
      box-shadow: 0 10px 30px rgba(78, 102, 210, 0.25);
    }

    .button--ghost {
      background: transparent;
      border-color: rgba(140, 170, 255, 0.4);
      color: #dfe5ff;
    }

    .button:hover,
    .button:focus {
      transform: translateY(-1px);
    }

    .secondary {
      padding: 1.5rem 2rem 2.25rem;
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      background: rgba(8, 9, 17, 0.7);
    }

    .secondary h2 {
      margin-top: 0;
      font-size: 1.2rem;
      color: #e2e6f7;
    }

    .secondary__links {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem 1.25rem;
    }

    .secondary__links a {
      color: #b9c2df;
      padding-bottom: 0.15rem;
      border-bottom: 1px solid transparent;
    }

    .secondary__links a:hover,
    .secondary__links a:focus {
      border-bottom-color: rgba(140, 170, 255, 0.6);
      color: #e9edff;
    }

    @media (max-width: 720px) {
      .not-found {
        grid-template-columns: 1fr;
      }

      .sigil {
        justify-self: start;
      }
    }
  </style>
</BaseLayout>
