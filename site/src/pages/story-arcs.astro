---
import BaseLayout from "../layouts/BaseLayout.astro";
import CanonMarkdown from "../components/CanonMarkdown.astro";
import { getCollection } from "astro:content";

const pages = await getCollection("nivara_pages");
const arcsDoc = pages.find((page) => page.id === "08_STORY_ARCS");

if (!arcsDoc) {
  throw new Error("Missing story arcs markdown.");
}

const { Content } = await arcsDoc.render();
---

<BaseLayout title="Nivara | Story Arcs">
  <section>
    <h1>Story Arcs</h1>
  </section>

  <CanonMarkdown>
    <Content />
  </CanonMarkdown>
</BaseLayout>
