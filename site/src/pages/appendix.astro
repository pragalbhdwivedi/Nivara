---
import BaseLayout from "../layouts/BaseLayout.astro";
import CanonMarkdown from "../components/CanonMarkdown.astro";
import { getCollection } from "astro:content";

const pages = await getCollection("nivara_pages");
const appendixDoc = pages.find((page) => page.id === "APPENDIX_STORY_EXCERPTS");

if (!appendixDoc) {
  throw new Error("Missing appendix markdown.");
}

const { Content } = await appendixDoc.render();
---

<BaseLayout title="Nivara | Appendix">
  <section>
    <h1>Appendix</h1>
  </section>

  <CanonMarkdown>
    <Content />
  </CanonMarkdown>
</BaseLayout>
