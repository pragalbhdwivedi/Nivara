---
import BaseLayout from "../layouts/BaseLayout.astro";
import CanonMarkdown from "../components/CanonMarkdown.astro";
import { getCollection } from "astro:content";

const pages = await getCollection("nivara_pages");
const powerDoc = pages.find((page) => page.id === "03_MAGIC_SYSTEM_OATHS_ELEMENTS");

if (!powerDoc) {
  throw new Error("Missing power markdown.");
}

const { Content } = await powerDoc.render();
---

<BaseLayout title="Nivara | Power">
  <section>
    <h1>Power</h1>
  </section>

  <CanonMarkdown>
    <Content />
  </CanonMarkdown>
</BaseLayout>
