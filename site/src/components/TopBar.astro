---
import { withBase } from "../utils/paths";

const links = [
  { href: "/world/", label: "World" },
  { href: "/power/", label: "Power" },
  { href: "/the-melt/", label: "The Melt" },
  { href: "/factions/", label: "Factions" },
  { href: "/characters/", label: "Characters" },
  { href: "/story-arcs/", label: "Story Arcs" },
  { href: "/symbols/", label: "Symbols" },
  { href: "/appendix/", label: "Appendix" },
];
---

<header class="topbar">
  <div class="topbar__inner">
    <a class="topbar__brand" href={withBase("/")}>Nivara</a>
    <nav class="topbar__nav">
      {links.map((link) => (
        <a href={withBase(link.href)}>{link.label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  .topbar {
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(10px);
    background: rgba(6, 7, 12, 0.85);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .topbar__inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    gap: 2rem;
  }

  .topbar__brand {
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #f2f2f7;
  }

  .topbar__nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.95rem;
  }

  .topbar__nav a {
    color: #cfd3e6;
    transition: color 0.2s ease;
  }

  .topbar__nav a:hover,
  .topbar__nav a:focus {
    color: #ffffff;
  }

  @media (max-width: 900px) {
    .topbar__inner {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
