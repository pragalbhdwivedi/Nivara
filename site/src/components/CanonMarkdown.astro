---
const { hideFirstHeading = true } = Astro.props;
const classes = ["canon-content", hideFirstHeading ? "canon-content--trim" : ""].filter(Boolean).join(" ");
---

<div class={classes}>
  <slot />
</div>

<style>
  .canon-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: #cdd3e8;
  }

  .canon-content :global(h1),
  .canon-content :global(h2),
  .canon-content :global(h3),
  .canon-content :global(h4) {
    color: #eef1ff;
    letter-spacing: 0.02em;
    margin: 1.5rem 0 0.75rem;
  }

  .canon-content :global(p) {
    margin: 0 0 1rem;
  }

  .canon-content :global(ul),
  .canon-content :global(ol) {
    padding-left: 1.5rem;
    margin: 0 0 1rem;
  }

  .canon-content :global(li) {
    margin-bottom: 0.4rem;
  }

  .canon-content :global(a) {
    color: #a9baff;
    border-bottom: 1px solid rgba(169, 186, 255, 0.35);
  }

  .canon-content :global(a:hover),
  .canon-content :global(a:focus) {
    color: #dbe2ff;
    border-bottom-color: rgba(219, 226, 255, 0.8);
  }

  .canon-content :global(blockquote) {
    margin: 0;
    padding: 0.75rem 1rem;
    border-left: 3px solid rgba(140, 170, 255, 0.5);
    background: rgba(10, 12, 22, 0.7);
    color: #d2d8f0;
  }

  .canon-content :global(code) {
    background: rgba(15, 18, 32, 0.9);
    padding: 0.15rem 0.4rem;
    border-radius: 6px;
    font-size: 0.95em;
  }

  .canon-content :global(pre) {
    background: rgba(15, 18, 32, 0.95);
    padding: 1rem;
    border-radius: 12px;
    overflow-x: auto;
  }

  .canon-content :global(hr) {
    border: 0;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    margin: 0.5rem 0;
  }

  .canon-content--trim :global(h1:first-child) {
    display: none;
  }
</style>
