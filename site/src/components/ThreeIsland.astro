---
interface Props {
  title: string;
  description?: string;
  componentName?: string;
}

const { title, description, componentName } = Astro.props;
---

<section class="island">
  <div class="island__header">
    <div>
      <h2>{title}</h2>
      {description && <p>{description}</p>}
    </div>
    {componentName && <span class="island__tag">{componentName}</span>}
  </div>
  <div class="island__scene">
    <slot />
  </div>
</section>

<style>
  .island {
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 1.5rem;
    background: rgba(10, 12, 22, 0.7);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
  }

  .island__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .island__header h2 {
    margin: 0 0 0.5rem;
    font-size: 1.4rem;
  }

  .island__header p {
    margin: 0;
    color: #b5b9d4;
  }

  .island__tag {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #90a4ff;
  }

  .island__scene {
    margin-top: 1.5rem;
    height: min(420px, 60vh);
    border-radius: 12px;
    overflow: hidden;
    background: radial-gradient(circle at top, rgba(60, 70, 110, 0.3), transparent 70%);
  }

  .island__scene :global(canvas) {
    width: 100% !important;
    height: 100% !important;
  }
</style>
