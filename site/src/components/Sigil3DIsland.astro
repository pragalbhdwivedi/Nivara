---
import SigilExtrudedScene from "./three/SigilExtrudedScene";
import sigilUrl from "../assets/sigils/sigil-placeholder.svg?url";
---

<section class="sigil-3d" data-sigil-section>
  <div class="sigil-3d__header">
    <div>
      <p class="sigil-3d__eyebrow">Sigil Viewer</p>
      <h2>Extruded glyph</h2>
      <p class="sigil-3d__description">A carved mark rendered in relief, bound to the symbols canon below.</p>
    </div>
  </div>
  <div class="sigil-3d__frame" data-sigil-frame data-sigil-url={sigilUrl}>
    <img class="sigil-3d__fallback" src={sigilUrl} alt="Sigil placeholder" loading="lazy" />
    <div class="sigil-3d__canvas">
      <SigilExtrudedScene client:only="react" svgUrl={sigilUrl} />
    </div>
  </div>
</section>

<script>
  const section = document.querySelector("[data-sigil-section]");

  if (section) {
    const frame = section.querySelector("[data-sigil-frame]");
    const state = window.__nivara ?? (window.__nivara = {});

    state.sigilSvgUrl = frame?.getAttribute("data-sigil-url") ?? state.sigilSvgUrl;

    const dispatch = (progress, isActive) => {
      window.dispatchEvent(
        new CustomEvent("sigil-progress", {
          detail: {
            progress,
            isActive,
          },
        })
      );
    };

    let isActive = false;

    const updateProgress = () => {
      if (!isActive || !section) {
        return;
      }

      const rect = section.getBoundingClientRect();
      const viewport = window.innerHeight || 0;
      const total = viewport + rect.height;
      const progress = Math.min(1, Math.max(0, (viewport - rect.top) / total));

      state.sigilProgress = progress;
      state.sigilIsActive = isActive;
      dispatch(progress, isActive);
    };

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.target !== section) {
            return;
          }

          isActive = entry.isIntersecting;
          state.sigilIsActive = isActive;
          dispatch(state.sigilProgress ?? 0, isActive);

          if (isActive) {
            updateProgress();
          }
        });
      },
      { threshold: 0.2 }
    );

    observer.observe(section);

    window.addEventListener("scroll", updateProgress, { passive: true });
    window.addEventListener("resize", updateProgress);

    updateProgress();
  }
</script>

<style>
  .sigil-3d {
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 18px;
    padding: 1.5rem;
    background: rgba(9, 12, 20, 0.75);
    box-shadow: 0 10px 26px rgba(0, 0, 0, 0.35);
  }

  .sigil-3d__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.25rem;
  }

  .sigil-3d__eyebrow {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(167, 174, 206, 0.8);
    margin: 0 0 0.5rem;
  }

  .sigil-3d__header h2 {
    margin: 0 0 0.5rem;
    font-size: 1.4rem;
  }

  .sigil-3d__description {
    margin: 0;
    color: rgba(179, 186, 220, 0.9);
  }

  .sigil-3d__frame {
    position: relative;
    height: clamp(280px, 50vh, 420px);
    border-radius: 14px;
    overflow: hidden;
    background: rgba(7, 9, 16, 0.9);
    border: 1px solid rgba(130, 138, 190, 0.2);
    box-shadow: inset 0 0 18px rgba(120, 132, 190, 0.12);
  }

  .sigil-3d__fallback {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 2.5rem;
    opacity: 0.65;
  }

  .sigil-3d__canvas {
    position: absolute;
    inset: 0;
  }

  .sigil-3d__canvas :global(canvas) {
    width: 100% !important;
    height: 100% !important;
  }

  @media (prefers-reduced-motion: reduce) {
    .sigil-3d__canvas {
      display: none;
    }

    .sigil-3d__fallback {
      opacity: 0.9;
    }
  }
</style>
